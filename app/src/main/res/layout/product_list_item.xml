<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_product_item"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="@dimen/product_image_size"
        android:layout_height="@dimen/product_image_size" />

    <TextView
        android:id="@+id/tv_product_name"
        android:textSize="@dimen/product_name_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_space" />

</LinearLayout>