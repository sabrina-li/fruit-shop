<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_product_item"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="@dimen/product_image_size"
        android:layout_height="@dimen/product_image_size" />

    <LinearLayout
        android:id="@+id/vg_product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_space">

        <TextView
            android:id="@+id/tv_product_name"
            android:textSize="@dimen/product_name_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_product_price_unit"
            android:textSize="@dimen/product_name_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/vg_fragment_specific_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_product_action">
        </Button>
    </LinearLayout>


</LinearLayout>